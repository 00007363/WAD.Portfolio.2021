                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentClub" class="control-label">Current Club</label>
                <input asp-for="CurrentClub" class="form-control" />
                <span asp-validation-for="CurrentClub" class="text-danger"></span>
